<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screans.ClubDesc">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="108dp"
      android:background="@color/white"
      android:paddingBottom="20dp"
      android:orientation="vertical">

    <ImageView
        android:layout_width="393dp"
        android:layout_height="193dp"
        android:padding="10dp"
        android:src="@drawable/sports" />

    <TextView
        android:id="@+id/cd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Basketball Society"
        android:textColor="#404040"
        android:textSize="30dp"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cd_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="20 April 2022"
        android:padding="10dp"
        android:textColor="#656868"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp" />

    <TextView
        android:id="@+id/cd_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="15dp"
        android:padding="10dp"
        android:paddingTop="80dp"
        android:layout_marginTop="10dp"
        android:text="UNM Basketball Society is open for both women and men in which they will have different sessions of practices and differenct competetions, if you are interested in basketball do join us
          UNM Basketball Society is open for both women and men in which they will have different sessions of practices and differenct competetions, if you are interested in basketball do join us!!"
        android:textColor="#404040"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221" />

    <Button
        android:id="@+id/cd_joinClub"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Join club"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

  </LinearLayout>
    </ScrollView>